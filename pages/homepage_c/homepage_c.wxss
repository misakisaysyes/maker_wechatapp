Page{
  background-color: #fbf9fe;
}

.container{
  color:#34495e;
  background-color: #fbf9fe;
  display:flex;
  flex-direction:column;
  align-items:center;
}

.title{
  font-size:x-large;
  font-weight:800;
  height:85rpx;
  width:100%;
  padding-left:20rpx;
  background-color: #2c3e50;
  color:white;
  border-bottom-right-radius:30rpx;
}

.item{
  display:flex;
  flex-direction:column;
  justify-content: space-between;
  width:82%;
  padding:8rpx;
  padding-left:20rpx;
  margin-top:20rpx;
  border: 3rpx #778ca3 dashed;
  border-radius:30rpx;
}

.date{
  display:flex;
  flex-direction:row;
  justify-content: space-between;
  font-size:32rpx;
  color: #778ca3;
  padding-right: 30rpx;
}

.edit{
  font-size:32rpx;
  position: fixed;
  top:10rpx;
  right:30rpx;
}
