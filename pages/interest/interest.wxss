/* pages/recommend/recommend.wxss */
page{
  background-color: #fbf9fe;
}

.container {
  height: 100%;
  width:100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  box-sizing: border-box;
  font-family: 'Microsoft Yahei', Helvetica, Arial, sans-serif;
  font-size:30rpx;
  color:black;
} 

.pic{
  height:48px;
  width:48px;
  border:1px;
  border-radius:24px;
}

.item{
width:620rpx;
display: flex;
flex-direction:row;
align-items:center;
margin-top:20rpx;
margin-bottom:50rpx;
padding:5rpx;
}

.item-left{
display: flex;
flex-direction:column;
align-items:center;
}

.item-right{
display: flex;
flex-direction:row;
align-items:center;
margin-left:10px;
}


